# Flask Configuration
FLASK_APP=main.py
FLASK_ENV=development
SECRET_KEY=generate-your-secure-secret-key

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost/buchdb

# Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB max file size
UPLOAD_FOLDER=app/static/uploads

# Google AI Configuration
GEMINI_API_KEY=your-gemini-api-key

# eBay API Configuration (Sandbox)
EBAY_APP_ID=your-ebay-app-id
EBAY_CERT_ID=your-ebay-cert-id
EBAY_DEV_ID=your-ebay-dev-id
EBAY_AUTH_TOKEN=your-ebay-auth-token
EBAY_SANDBOX=True

# Booklooker API Configuration
BOOKLOOKER_API_KEY=your-booklooker-api-key
BOOKLOOKER_USER_TOKEN=your-booklooker-user-token
BOOKLOOKER_API_URL=https://api.booklooker.de/2.0
BOOKLOOKER_SYNC_INTERVAL=3600  # Sync interval in seconds

# Cache Configuration
CACHE_TYPE=filesystem
CACHE_DIR=app/cache
CACHE_DEFAULT_TIMEOUT=86400  # 24 hours
PRICE_CACHE_DURATION=86400   # 24 hours
METADATA_CACHE_DURATION=604800  # 7 days

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log